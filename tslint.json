{
	"extends": "tslint:recommended",
	"rules": {
		"callable-types": false,
		"comment-format": false,
		"forin": false,
		"indent": [true, "tabs", 4],
		"max-line-length": {
			"options": [200]
		},
		"max-classes-per-file": false,
		// Build blocker in this codebase (many existing Array<T> usages). Disable to keep production builds unblocked.
		"array-type": false,
		// This rule is too strict for current codebase and blocks builds on non-functional ordering issues.
		"member-ordering": false,
		"new-parens": false,
		"no-arg": true,
		"no-bitwise": false,
		"no-conditional-assignment": true,
		"no-consecutive-blank-lines": false,
		// This project intentionally uses console logging during development; also reduces tslint output size.
		"no-console": false,
		"no-empty": [true, "allow-empty-functions"],
		// Not worth blocking builds for.
		"no-shadowed-variable": false,
		"no-trailing-whitespace": false,
		"no-var-requires": false,
		"object-literal-shorthand": [true, "never"],
		"object-literal-sort-keys": false,
		"one-line": [true, "check-catch", "check-finally", "check-else"],
		"ordered-imports": false,
		"quotemark": [true, "single", "avoid-escape", "avoid-template"]
	}
}
